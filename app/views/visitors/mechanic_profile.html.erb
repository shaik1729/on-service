<header class="site-header" style="height: 630px;">
    <%= render partial: 'layouts/nav'%>
	<div class="profile-main">
		<div class="profile-header">
			<div class="user-detail">
				<div class="user-image">
					<img src="/assets/user1">
				</div>
				<div class="user-data">
					<h2><%= current_mechanic.name %></h2>
					<p>Engineering graduate in the department of <strong>MECH</strong><br>
					<i class="fa fa-map-marker" aria-hidden="true"></i>  India
					</p>
				</div>
				<div class="social-icons">
					<i class="fa fa-facebook"></i>
					<i class="fa fa-twitter"></i>
					<i class="fa fa-linkedin"></i>
					<i class="fa fa-google"></i>
					<i class="fa fa-instagram"></i>
					<a href="#" type="button" class="msg-btn"><i class="fa fa-envelope-o" aria-hidden="true"></i>Send Message</a>
				</div>
			</div>
            <div class="tab-panel-main">
                <ul class="tabs">
					<%# <li class="tab-link current" data-tab="Basic-detail"><a href="<%= edit_mechanic_registration_path %>">Edit Detail</a></li> %>
				</ul>
				<div id="Detail" class="tab-content current">
					<div class="skill-box">
					  <ul>
						<li><strong>My Core Skills:</strong></li>
						<li>THE ABILITY TO WORK UNDER PRESSURE<i class="fa fa-star" aria-hidden="true"></i><i class="fa fa-star" aria-hidden="true"></i><i class="fa fa-star" aria-hidden="true"></i></li>
						<li>CREATIVITY<i class="fa fa-star" aria-hidden="true"></i><i class="fa fa-star" aria-hidden="true"></i></li>
						<li>EFFECTIVE TECHNICAL SKILLS<i class="fa fa-star" aria-hidden="true"></i><i class="fa fa-star" aria-hidden="true"></i><i class="fa fa-star" aria-hidden="true"></i><i class="fa fa-star" aria-hidden="true"></i><i class="fa fa-star" aria-hidden="true"></i></li>
					  </ul>		
					</div>
					<div class="bio-box">
						<div class="heading">
							<p>SPECIALIZATION
							<label>10 Year Experience</label></p>
						</div>
						<div class="desc">
							<%= current_mechanic.specialization %>
						</div>
					</div>
					<div class="detail-box">
						<p>Detail</p>
						<ul class="ul-first">
							<li>Country : </li>
							<li>Contact No : </li>
							<li>Email : </li>
						</ul>
						<ul class="ul-second">							
							<li>India</li>
							<li><%= current_mechanic.mobile_number %></li>
							<li><%= current_mechanic.email %></li>
						</ul>
					</div>
				</div>
			</div>
		</div>
		<div style="clear: both;"></div>
		<div class="footer">
			<div class="footer-box"><i class="fa fa-facebook"></i></div>
			<div class="footer-box"><i class="fa fa-twitter"></i></div>
			<div class="footer-box"><i class="fa fa-linkedin"></i></div>
			<div class="footer-box"><i class="fa fa-google"></i></div>
			<div class="footer-box"><i class="fa fa-instagram"></i></div>
		</div>
    </div>
</header>