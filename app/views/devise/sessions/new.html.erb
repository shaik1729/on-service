<% if resource_name == :mechanic %>
<header class="site-header">
    <%= render partial: 'layouts/nav' %>
    <div id="background-color">
      <div class="loginbox">
        <img src="/assets/user1" class="avatar">
        <h1>mechanic login</h1>
        <%= devise_error_messages! %>
        <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f| %>
          <p>Email</p>
          <%= f.email_field :email, :autofocus => true, placeholder: 'Enter Mail-id' %>
          <p>Passsword</p>
          <%= f.password_field :password, placeholder: 'Enter Passsword' %>
          <%= f.submit 'Sign in' %>
          <br>
          <a href="/mechanics/sign_up" >Don't have an account?</a>
        <% end %>
      </div>
    </div>
  </header>
<% else %>
  <header class="site-header">
  <%= render partial: 'layouts/nav' %>
    <div id="background-color">
      <div class="loginbox">
        <img src="/assets/user1" class="avatar">
        <h1>User login</h1>
        <%= devise_error_messages! %>
        <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f| %>
          <p>Email</p>
          <%= f.email_field :email, :autofocus => true, placeholder: 'Enter Mail-id' %>
          <p>Passsword</p>
          <%= f.password_field :password, placeholder: 'Enter Passsword' %>
          <%= f.submit 'Sign in' %>
          <br>
          <a href="/users/sign_up" >Don't have an account?</a>
        <% end %>
      </div>
    </div>
  </header>
<% end %>
