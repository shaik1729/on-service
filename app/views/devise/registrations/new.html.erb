<% if resource_name == :mechanic %>
<header class="site-header" id="form-bottom">
    <%= render partial: 'layouts/nav' %>
    <div class="register">
        <h2>Mechanic Register</h2>
          <%= devise_error_messages! %>
          <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :role => 'form' }) do |f| %>
            <label>Name : </label><br>
            <%= f.text_field :name, :autofocus => true, placeholder: 'Enter your name', required: true %><br><br>        
            <label>Mobile number : </label><br>
            <%= f.text_field :mobile_number, min: 10, max: 10, placeholder: 'Enter your mobile number', required: true %><br><br>        
            <label>Email : </label><br>
            <%= f.email_field :email, placeholder: 'Enter your Email' , required: true %><br><br>
            <label>Password : </label><br>
            <%= f.password_field :password, placeholder: "Enter your password" , required: true %><br><br>
            <label>Re-enter Password : </label><br>
            <%= f.password_field :password_confirmation, placeholder: "Enter your password" , required: true %><br><br>
            <label>Select your location where your Mechanic shop is : click on pan to location and click on sign up </label>
            <div id="map" style="height: 425px; margin-bottom: 20px; color: black;"></div>
            <%= f.hidden_field :latitude %>
            <%= f.hidden_field :longitude %>
            <label>Specialization : </label><br>
            <%= f.text_area:specialization, rows: 4, placeholder: 'Enter your specialization', required: true %><br><br>
            <label>Gender : </label><br>
            <%= f.radio_button :gender, "male", checked: true %> <label>Male</label>
            <%= f.radio_button :gender, "female" %> <label>Female</label><br/><br/>
            <%= f.submit 'Submit', class: 'center', id: 'sub' %>
        <% end %>
    </div>
</header>
<script type="text/javascript">
    var numbersOnly = document.getElementById("mechanic_mobile_number");
    numbersOnly.onkeyup = function myFunction() {
        numbersOnly.value = numbersOnly.value.replace(/[^0-9]/g, '');
    };
</script>
<% else %>
<header class="site-header" id="form-bottom">
    <%= render partial: 'layouts/nav' %>
    <div class="register">
        <h2>User Register</h2>
          <%= devise_error_messages! %>
          <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :role => 'form' }) do |f| %>
            <label>Name : </label><br>
            <%= f.text_field :name, :autofocus => true, placeholder: 'Enter your name' %><br><br>        
            <label>Email : </label><br>
            <%= f.email_field :email, placeholder: 'Enter your Email' %><br><br>
            <label>Password : </label><br>
            <%= f.password_field :password, placeholder: "Enter your password" %><br><br>
            <label>Re-enter Password : </label><br>
            <%= f.password_field :password_confirmation, placeholder: "Enter your password" %><br><br>
            <%= f.submit 'Submit', class: 'center', id: 'sub' %>
        <% end %>
    </div>
</header>
<% end %>