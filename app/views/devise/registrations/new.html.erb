<header class="site-header" id="form-bottom">
    <%= render partial: 'layouts/nav' %>
    <div class="register">
        <h2>User Register</h2>
          <%= devise_error_messages! %>
          <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :role => 'form' }) do |f| %>
            <label>Name : </label><br>
            <%= f.text_field :name, :autofocus => true, placeholder: 'Enter your name' %><br><br>        
            <label>Email : </label><br>
            <%= f.email_field :email, placeholder: 'Enter your Email' %><br><br>
            <label>Password : </label><br>
            <%= f.password_field :password, placeholder: "Enter your password" %><br><br>
            <label>Re-enter Password : </label><br>
            <%= f.password_field :password_confirmation, placeholder: "Enter your password" %><br><br>
            <%= f.submit 'Submit', class: 'center', id: 'sub' %>
        <% end %>
    </div>
</header>
